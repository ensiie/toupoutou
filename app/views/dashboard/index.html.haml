%header 
=button_to "Friends", friends_path ,:method => :get
.container 
  .row
    .six.columns.show-on-desktops
      %section.calendar
    .six.columns.show-on-desktops
      %section.wishlist
        %ol
          -@items.each do |i|
            %li
              &nbsp;
              =i.product_name
      
        = form_for @item do |f|
          = f.label :product_name
          = f.text_field :product_name
          = f.submit

    .six.phone-two.columns.show-on-phones
      %section.calendar
    .six.phone-two.columns.show-on-phones
      %section.wishlist
%footer
