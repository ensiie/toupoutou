.show-on-desktops
  .container
    .row
      .twelve.columns.show-on-desktops
        %section.friends
          %h4 GÃ©rer votre liste d'amis
          .row
            .four.columns.centered.show-on-desktops
              Importer des amis depuis Facebook :
              =link_to image_tag( 'importer_ami.png'), vimports_friends_path
              %br
              Rechercher/inviter des amis :
              %input{:type => "text"} 
              %input{:type => "button", :value => "Inviter", :class => "invit nice small radius blue button"}
          
            .four.columns.centered.show-on-desktops{:style => 'text-align:center'}
              = button_to "Importer depuis Facebook", import_friends_path, :method => :get, :class => "nice small radius blue button"
              -# %input{:type => "text"} 
              -# %input{:type => "button", :value => "Inviter", :class => "invit nice small radius blue button"}
          .list_friends
            %ul
              -@friends.each do |f|
                %li
                  = f.first_name.capitalize + " " + f.last_name.capitalize
                  = button_to "Supprimer", friend_path(f) , :method => :delete, :confirm => "Voulez-vous supprimer " + f.first_name + " " + f.last_name

