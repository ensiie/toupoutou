.show-on-desktops 
  .container
    .row 
      .six.columns.centered.connexion
        %figure.login
          =link_to image_tag( 'poutou_accueil.png'), user_omniauth_authorize_path(:facebook)
    .row    
      .twelve.columns.centered.connexion
    .row
      .five.columns.centered.connexion
        .login
          = link_to image_tag( 'login.png'), user_session_path
          %br
          %h5 Se connecter
        .inscription
          = link_to image_tag( 'inscription.png'), new_user_registration_path
          %br
          %h5 Inscription
:javascript
  $(document).ready(function () {  
   
    $(document).bind('keydown', 'c', function () {
      document.location.href="/users/sign_in" 
    });

    $(document).bind('keydown', 'i', function () {
      document.location.href="/users/sign_up" 
    });
    
    $(document).bind('keydown', 'f', function () {
      document.location.href="/users/auth/facebook" 
    });
  })
